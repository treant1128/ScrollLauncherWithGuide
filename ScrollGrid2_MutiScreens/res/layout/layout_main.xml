<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/run_image"
            android:layout_width="2000dip"
            android:layout_height="match_parent"
            android:scaleType="matrix" />
    </LinearLayout>
	<TextView 
	    android:id="@+id/cur_page"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="5dip"
	    android:text="1"
	    android:textColor="#0000ff"
	    android:textStyle="bold"
	    android:textSize="30sp"
	    android:background="@drawable/yellow_circle"
	    />
    <org.treant.scrollgrid2_mutiscreens.widgets.ScrollLauncherLayout
        android:id="@+id/scrollLauncher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="50dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#88111111"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/_preferences" />

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="right"
            android:src="@drawable/_close_clear_cancel" />

        <ImageButton
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="right"
            android:layout_marginRight="10dip"
            android:src="@drawable/_delete" />
    </LinearLayout>

</RelativeLayout>